{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        {# Sidebar avec les catégories #}
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Catégories</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        {% for category in categories %}
                            <a href="{{ path('article_by_category', {'id': category.id}) }}" 
                               class="list-group-item list-group-item-action">
                                {{ category.nom }}
                            </a>
                        {% else %}
                            <p class="mb-0">Aucune catégorie disponible</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        {# Contenu principal #}
        <div class="col-md-9">
            <h1 class="mb-4">Bienvenue</h1>
            
            <h2 class="mb-3">Derniers articles</h2>
            
            <div class="row">
                {% for article in latest_articles %}
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            {% if article.image %}
                                <img src="{{ asset('uploads/images/' ~ article.image) }}" 
                                     class="card-img-top" 
                                     alt="{{ article.titre }}" 
                                     style="height: 200px; object-fit: cover;">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ article.titre }}</h5>
                                <p class="card-text">{{ article.content|striptags|slice(0, 150) }}...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">{{ article.createdAt|date('d/m/Y') }}</small>
                                    <a href="{{ path('article_show', {'id': article.id}) }}" 
                                       class="btn btn-primary">Lire la suite</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p>Aucun article n'a été publié pour le moment.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
